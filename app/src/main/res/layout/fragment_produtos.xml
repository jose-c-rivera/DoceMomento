<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_shop_cart_white_24dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="50dp" android:layout_marginEnd="53dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="50dp"/>


    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                    android:id="@+id/firstCard"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/cardview_light_background" android:layout_alignParentTop="true">


                <ImageView
                        android:layout_width="181dp"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/cafe" android:id="@+id/imageView4"
                        android:layout_alignTop="@+id/firstCard" android:layout_alignBottom="@+id/firstCard"
                        android:layout_alignStart="@+id/firstCard" android:translationX="10dp"/>
                <TextView
                        android:text="Cappuccino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView" android:textColor="#000000"
                        android:textStyle="bold" android:textSize="30sp" android:layout_alignTop="@id/imageView4"
                        android:translationX="200dp" android:fontFamily="serif-monospace" android:translationY="10dp"/>
                <Button
                        android:text="Adicionar"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content" android:id="@+id/button" android:textColor="#FFFFFF"
                        android:layout_alignBottom="@+id/firstCard" android:layout_alignEnd="@+id/firstCard"
                        android:translationX="210dp" android:translationY="85dp" android:background="#00BCD4"
                        android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/secondCard"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="170dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/cardview_light_background" android:layout_alignParentTop="true">


                <ImageView
                        android:layout_width="181dp"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/pastel"
                        android:id="@+id/imageView5"
                        android:layout_alignTop="@+id/secondCard" android:layout_alignBottom="@+id/secondCard"
                        android:layout_alignStart="@+id/secondCard" android:translationX="10dp"/>
                <TextView
                        android:text="Pastel Sem Lactose"
                        android:layout_width="192dp"
                        android:layout_height="63dp" android:id="@+id/textView2" android:textColor="#000000"
                        android:textStyle="bold" android:textSize="25sp" android:layout_alignTop="@id/imageView5"
                        android:translationX="200dp" android:fontFamily="serif-monospace" android:translationY="10dp"/>
                <Button
                        android:text="Adicionar"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content" android:id="@+id/button2" android:textColor="#FFFFFF"
                        android:layout_alignBottom="@+id/secondCard" android:layout_alignEnd="@+id/secondCard"
                        android:translationX="210dp" android:translationY="85dp" android:background="#00BCD4"
                        android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/thirdCard"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="330dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/cardview_light_background" android:layout_alignParentTop="true">


                <ImageView
                        android:layout_width="181dp"
                        android:layout_height="131dp" app:srcCompat="@drawable/bolo_choc" android:id="@+id/imageView6"
                        android:layout_alignTop="@+id/thirdCard" android:layout_alignBottom="@+id/thirdCard"
                        android:layout_alignStart="@+id/thirdCard" android:translationX="10dp"
                        android:translationY="10dp"/>
                <TextView
                        android:text="Torta de Chocolate"
                        android:layout_width="192dp"
                        android:layout_height="63dp" android:id="@+id/textView3" android:textColor="#000000"
                        android:textStyle="bold" android:textSize="25sp" android:layout_alignTop="@id/imageView6"
                        android:translationX="200dp" android:fontFamily="serif-monospace" android:translationY="10dp"/>
                <Button
                        android:text="Adicionar"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content" android:id="@+id/button3" android:textColor="#FFFFFF"
                        android:layout_alignBottom="@+id/thirdCard" android:layout_alignEnd="@+id/thirdCard"
                        android:translationX="210dp" android:translationY="85dp" android:background="#00BCD4"
                        android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:id="@+id/fourthCard"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="490dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/cardview_light_background" android:layout_alignParentTop="true">


                <ImageView
                        android:layout_width="181dp"
                        android:layout_height="131dp" app:srcCompat="@drawable/bolo_frut" android:id="@+id/imageView7"
                        android:layout_alignTop="@+id/fourthCard" android:layout_alignBottom="@+id/fourthCard"
                        android:layout_alignStart="@+id/fourthCard" android:translationX="10dp"
                        android:translationY="10dp"/>
                <TextView
                        android:text="Torta de Frutas Vermelhas"
                        android:layout_width="192dp"
                        android:layout_height="63dp" android:id="@+id/textView4" android:textColor="#000000"
                        android:textStyle="bold" android:textSize="19sp" android:layout_alignTop="@id/imageView7"
                        android:translationX="200dp" android:fontFamily="serif-monospace" android:translationY="10dp"/>
                <Button
                        android:text="Adicionar"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content" android:id="@+id/button4" android:textColor="#FFFFFF"
                        android:layout_alignBottom="@+id/fourthCard" android:layout_alignEnd="@+id/fourthCard"
                        android:translationX="210dp" android:translationY="85dp" android:background="#00BCD4"
                        android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:id="@+id/fifthCard"
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="650dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/cardview_light_background" android:layout_alignParentTop="true">


                <ImageView
                        android:layout_width="181dp"
                        android:layout_height="131dp" app:srcCompat="@drawable/bolo_straw" android:id="@+id/imageView8"
                        android:layout_alignTop="@+id/fifthCard" android:layout_alignBottom="@+id/fifthCard"
                        android:layout_alignStart="@+id/fifthCard" android:translationX="10dp"
                        android:translationY="10dp"/>
                <TextView
                        android:text="Torta de Morango"
                        android:layout_width="192dp"
                        android:layout_height="63dp" android:id="@+id/textView5" android:textColor="#000000"
                        android:textStyle="bold" android:textSize="25sp" android:layout_alignTop="@id/imageView8"
                        android:translationX="200dp" android:fontFamily="serif-monospace" android:translationY="10dp"/>
                <Button
                        android:text="Adicionar"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content" android:id="@+id/button5" android:textColor="#FFFFFF"
                        android:layout_alignBottom="@+id/fifthCard" android:layout_alignEnd="@+id/fifthCard"
                        android:translationX="210dp" android:translationY="85dp" android:background="#00BCD4"
                        android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>