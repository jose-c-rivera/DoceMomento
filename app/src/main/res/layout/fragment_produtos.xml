<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_shop_cart_white_24dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="50dp" android:layout_marginEnd="53dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="50dp"/>
    <ImageView
            android:layout_width="390dp"
            android:layout_height="149dp" app:srcCompat="@drawable/macaron" android:id="@+id/produtos_background"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" android:layout_alignParentStart="true" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:layout_alignParentLeft="true"/>
    <TextView
            android:text="@string/menu_produtos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/produtos_text"
            android:gravity="center"
            android:layout_alignTop="@+id/produtos_background"
            android:layout_marginTop="46dp" app:fontFamily="serif-monospace" android:textSize="36sp"
            android:textStyle="bold"
            android:background="#83FFFFFF" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignRight="@+id/produtos_background" android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp" android:layout_alignEnd="@+id/produtos_background" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" android:layout_alignLeft="@+id/produtos_background"
            android:layout_alignStart="@+id/produtos_background" android:layout_marginBottom="68dp"
            android:layout_alignBottom="@+id/produtos_background"/>

</RelativeLayout>